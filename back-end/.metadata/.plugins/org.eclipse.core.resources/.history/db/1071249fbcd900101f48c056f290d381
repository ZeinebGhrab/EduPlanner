package com.springboot.springboot.service.planning;

import java.time.LocalDate;
import java.time.LocalTime;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.springboot.springboot.entity.planning.Creneau;
import com.springboot.springboot.repository.planning.CreneauRepository;

@Service
public class CreneauService {

    @Autowired
    private CreneauRepository repository;

    public List<Creneau> findAll() {
        return repository.findAll();
    }

    public Optional<Creneau> findById(int id) {
        return repository.findById(id);
    }

    public Creneau save(Creneau creneau) {
        // Mettre à jour le statut avant de sauvegarder
        creneau.updateStatut();
        return repository.save(creneau);
    }

    public void deleteById(int id) {
        repository.deleteById(id);
    }

    // =============================
    // Nouvelle méthode pour mettre à jour tous les statuts
    // =============================
    @Transactional
    public void updateAllStatuts() {
        List<Creneau> creneaux = repository.findAll();
        LocalDate today = LocalDate.now();
        LocalTime now = LocalTime.now();

        for (Creneau c : creneaux) {
            if (c.getDate() == null) {
                c.setStatut("Planifié");
            } else if (c.getDate().isBefore(today)) {
                c.setStatut("Terminé");
            } else if (c.getDate().isAfter(today)) {
                c.setStatut("À venir");
            } else { // date == today
                if (now.isBefore(c.getHeureDebut())) {
                    c.setStatut("À venir");
                } else if (now.isAfter(c.getHeureFin())) {
                    c.setStatut("Terminé");
                } else {
                    c.setStatut("En cours");
                }
            }
        }

        repository.saveAll(creneaux); // Sauvegarde tous les changements en DB
    }
}

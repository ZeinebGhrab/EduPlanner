package com.springboot.springboot.dto.planning;

import java.time.LocalDateTime;
import java.time.LocalTime;

import com.springboot.springboot.entity.planning.Creneau;

public class CreneauDTO {
    private LocalTime heureDebut;
    private LocalTime heureFin;
    private String statut;

    public CreneauDTO(Creneau creneau) {
        this.dateDebut = creneau.getHeureDebut();
        this.dateFin = creneau.getHeureFin();
        this.statut = creneau.getStatut();
    }

    // getters
    public LocalDateTime getDateDebut() { return dateDebut; }
    public LocalDateTime getDateFin() { return dateFin; }
    public String getStatut() { return statut; }
}
